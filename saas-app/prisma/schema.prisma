generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ResumeDocument {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  originalName    String
  parsedText      String?
  structuredJson  Json?
  createdAt       DateTime @default(now())
  sessions        InterviewSession[]
}

model InterviewSession {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  resumeId        String   @db.ObjectId
  jobDescription  String
  roleTitle       String
  status          String   @default("pending") // pending, active, completed
  questionCount   Int      @default(0)
  targetQuestions Int      @default(10)
  createdAt       DateTime @default(now())
  
  resume          ResumeDocument @relation(fields: [resumeId], references: [id])
  turns           InterviewTurn[]
  report          EvaluationReport?
}

model InterviewTurn {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId       String   @db.ObjectId
  turnNumber      Int
  questionText    String
  audioQuestionUrl String?
  answerText      String?
  timestamp       DateTime @default(now())
  
  session         InterviewSession @relation(fields: [sessionId], references: [id])
}

model EvaluationReport {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId       String   @unique @db.ObjectId
  summary         String
  strengths       String[]
  gaps            String[]
  repetition      Json?
  actionableFixes String[]
  scores          Json?    // {clarity: 8, star: 7, ...}
  rewrittenAnswers Json?   // [{original: "...", improved: "..."}]
  roleFitScore    Int
  createdAt       DateTime @default(now())
  
  session         InterviewSession @relation(fields: [sessionId], references: [id])
}
